- content_for(:title) { 'All users' }
- content_for(:meta_description) { 'A list of all users looking to book shows.' }

%h2 Users
.overflow-auto
  %table{cellspacing: 0}
    %thead
      %tr
        %th User
        %th Name
        %th Location
        -# %th Email
        -# %th Phone
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= user.display_name
          %td= "#{user.first_name} #{user.last_name}"
          %td= user.address.present? ? "#{user.address.city}, #{user.address.state} #{user.address.country}" : 'N/A'
          -# %td= user.email
          -# %td= user.phone
          %td
            %button
              = link_to 'View', user

%br

%button
  = link_to('New User', 'users/sign_up', {})
