%p
  %b User:
  = @user.display_name
%p
  %b Name:
  = "#{@user.first_name} #{@user.last_name}"
%p
  %b Phone:
  = @user.phone
%p
  %b Email:
  = @user.email
%p
  %b Location:
- if @user.address.present?
  = "#{@user.address.city}, #{@user.address.state} #{@user.address.country}"
- else
  Unknown

%br

- if @user.id = current_user
  = link_to('Edit', edit_user_path, {})

\|
= link_to 'Back', users_path
