%p
  %b User:
  = @user.display_name
%p
  %b Name:
  = "#{@user.first_name} #{@user.last_name}"
%p
  %b Phone:
  = @user.phone
%p
  %b Email:
  = @user.email
- if @user.addresses.present?
  -@user.addresses.each do |address|
    %p
      %b City:
      = address.city
    %p
      %b State:
      = address.state
    %p
      %b Country:
      = address.country

\|
= link_to 'Back', users_path
