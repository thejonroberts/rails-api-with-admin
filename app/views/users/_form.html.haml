= form_for @user do |f|
  - if @user.errors.any?
    #error_explanation
      %h2= "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      %ul
        - @user.errors.full_messages.each do |message|
          %li= message
  .field
    = f.label :display_name
    = f.text_field :display_name
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :phone
    = f.text_field :phone
  %p Address
  = f.fields_for :address do |f|
    .field
      = f.label :line_one
      = f.text_field :line_one
    .field
      = f.label :line_two
      = f.text_field :line_two
    .field
      = f.label :city
      = f.text_field :city
    .field
      = f.label :state
      = f.text_field :state
    .field
      = f.label :country
      = f.text_field :country
    .field
      = f.label :zip_code
      = f.text_field :zip_code
  .actions
    = f.submit 'Save'
