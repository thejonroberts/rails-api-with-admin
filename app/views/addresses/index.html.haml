%h2 Addresses
.overflow-auto
  %table{cellspacing: 0}
    %thead
      %tr
        -# %th Line one
        -# %th Line two
        %th City
        %th State
        %th Country
        -# %th Country code
        %th Zip code
        %th
        - if current_user&.superuser?
          %th
          %th
    %tbody
      - @addresses.each do |address|
        %tr
          -# %td= address.line_one
          -# %td= address.line_two
          %td= address.city
          %td= address.state
          %td= address.country
          -# %td= address.country_code
          %td= address.zip_code
          %td
            %button
              = link_to('View', address)
          - if current_user&.superuser?
            %button
              %td= link_to 'Edit', edit_address_path(address)
            %button
              %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }

%br
%button
  = link_to 'New Address', new_address_path
