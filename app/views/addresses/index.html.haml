%h2 Addresses

%table
  %tr
    -# %th Addressable
    -# %th Line one
    -# %th Line two
    %th City
    %th State
    %th Country
    -# %th Country code
    %th Zip code
    %th
    - if current_user&.superuser?
      %th
      %th

  - @addresses.each do |address|
    %tr
      -# %td= address.addressable
      -# %td= address.line_one
      -# %td= address.line_two
      %td= address.city
      %td= address.state
      %td= address.country
      -# %td= address.country_code
      %td= address.zip_code
      %td= link_to('View', address)
      - if current_user&.superuser?
        %td= link_to 'Edit', edit_address_path(address)
        %td= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New Address', new_address_path
